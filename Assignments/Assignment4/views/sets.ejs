<!DOCTYPE html>
<html>

<head>
    <title>Lego Collection</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="/css/theme.css">
</head>

<body>

    <%- include('partials/navbar', { page: "/lego/sets" }) %>

    <div class="container mt-5">
        <h1 class="text-center mb-4">Lego Collection</h1>

        <!-- Filters -->
        <div class="text-center mb-4">
            <a href="/lego/sets?theme=technic" class="btn btn-outline-primary btn-sm mx-1">Technic</a>
            <a href="/lego/sets?theme=classic town" class="btn btn-outline-primary btn-sm mx-1">Classic Town</a>
            <a href="/lego/sets?theme=star wars" class="btn btn-outline-primary btn-sm mx-1">Star Wars</a>
            <a href="/lego/sets" class="btn btn-secondary btn-sm mx-1">Clear Filter</a>
        </div>

        <!-- Table -->
        <div class="table-responsive">
            <table class="table table-striped align-middle">

                <thead class="table-dark">
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Theme</th>
                        <th>Year</th>
                        <th>Parts</th>
                        <th>Details</th>
                    </tr>
                </thead>

                <tbody>

                    <% sets.forEach(set => { %>

                        <tr>

                            <!-- Thumbnail -->
                            <td>
                                <div class="rounded"
                                    style="
                                        width: 7rem;
                                        height: 7rem;
                                        background-image: url('<%= set.img_url %>');
                                        background-size: cover;
                                        background-position: center;
                                    ">
                                </div>
                            </td>

                            <td><%= set.name %></td>

                            <!-- Theme button -->
                            <td>
                                <a href="/lego/sets?theme=<%= set.theme %>" class="btn btn-sm btn-outline-primary">
                                    <%= set.theme %>
                                </a>
                            </td>

                            <td><%= set.year %></td>

                            <td><%= set.num_parts %></td>

                            <!-- Details button -->
                            <td>
                                <a href="/lego/sets/<%= set.set_num %>" class="btn btn-sm btn-primary">
                                    Details
                                </a>
                            </td>

                        </tr>

                    <% }) %>

                </tbody>

            </table>
        </div>

    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>
